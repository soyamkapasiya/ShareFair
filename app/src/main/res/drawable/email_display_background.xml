<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Light background with primary color tint -->
    <solid android:color="#F0F9FF" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Subtle border with primary color -->
    <stroke
        android:width="1dp"
        android:color="#3B82F6" />

    <!-- Optional: Add padding effect with inner shadow -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />

</shape>